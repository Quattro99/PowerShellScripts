{
    "properties": {
        "roleName": "Custom Key Vault Backup Role",
        "description": "Allows getting, listing, and backing up keys and secrets in Azure Key Vault for Azure Backup purposes.",
        "assignableScopes": [
            "/subscriptions/XXX"
        ],
        "permissions": [
            {
                "actions": [
                    "Microsoft.KeyVault/vaults/secrets/read"
                ],
                "notActions": [],
                "dataActions": [
                    "Microsoft.KeyVault/vaults/keys/read",
                    "Microsoft.KeyVault/vaults/secrets/backup/action",
                    "Microsoft.KeyVault/vaults/secrets/backup/action"
                ],
                "notDataActions": []
            }
        ]
    }
}
